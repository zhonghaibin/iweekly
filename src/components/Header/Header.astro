---
import { SITE } from '@/config';
import AstroLogo from './AstroLogo.astro';
import HeaderRight from './HeaderRight.astro';
---

<header>
  <nav class='nav-wrapper md:-ml-3 xl:max-w-7xl md:w-full lg:max-w-5xl md:max-w-2xl sm:w-96 w-full ml-3' title={SITE.title}>
    <div class='logo flex md:ml-0 ml-3.5'>
      <a href='/' class='logo-image'>
        <AstroLogo size={40} />
      </a>
      <a href='/'>
        <h1 class='text-gray-800 dark:text-gray-200'>{SITE.title}</h1>
      </a>
    </div>
    <HeaderRight />
  </nav>
</header>

<style>
  header {
    height: var(--theme-navbar-height);
    width: 100%;
    background-color: var(--theme-navbar-bg);
    display: flex;
    align-items: center;
    justify-content: center;
    top: 0;
  }

  .logo {
    display: flex;
    font-size: 32px;
    flex-shrink: 0;
    font-weight: 600;
    line-height: 1;
    gap: 4px;
  }

  .logo a {
    padding: 8px 4px;
    margin: -8px -4px;
    text-decoration: none;
    font-weight: bolder;
    display: block;
    transition: color 100ms ease-out;
    color: var(--theme-text);
  }

  .logo a:hover,
  .logo a:focus {
    color: var(--theme-accent);
  }

  .logo .logo-image {
    margin-top: -14px;
  }

  .logo h1 {
    font: inherit;
    margin: 0;
    margin-left: -2px;
  }

  .nav-wrapper {
    display: flex;
    align-items: center;
    justify-content: flex-end;
    gap: 16px;
    margin: 10px 0 5px;
  }

  @media (max-width: 800px) {
    .nav-wrapper {
      margin: 5px 0;
    }
  }

  :root {
    --docsearch-primary-color: var(--theme-accent);
    --docsearch-logo-color: var(--theme-text);
  }

  .search-item {
    display: none;
    position: relative;
    z-index: 10;
    flex-grow: 1;
    padding-right: 11px;
    display: flex;
    max-width: 200px;
  }

  .btn-yellow {
    color: #a67c52 !important;
    font-weight: bold;
  }

  :global(.search-item > *) {
    flex-grow: 1;
  }

  @media (min-width: 800px) {
    .search-item {
      max-width: 400px;
    }
  }
</style>

<style is:global>
  @media (min-width: 1412px) {
    .xl\:max-w-7xl {
      max-width: 1338px;
    }
  }

  @media (min-width: 1080px) .lg\:max-w-5xl {
    max-width: 998px;
  }

  @media (min-width: 768px) .md\:max-w-2xl {
    max-width: 659px;
  }
</style>
